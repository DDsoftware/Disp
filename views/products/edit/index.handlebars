<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>Edit A product</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form name="edit-post" method="POST" action="/products/{{product.username}}/{{product.slug}}?_method=PUT">
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Product Name</label>
            <input type="text" class="form-control" name="productName" value="{{product.productName}}" required data-validation-required-message="Please enter a product name.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Product Price</label>
            <input type="text" class="form-control" name="productPrice" value="{{product.productPrice}}"" required data-validation-required-message="Please enter a product price.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>product description</label>
            <input type="text" class="form-control" name="productDescription" value="{{product.productDescription}}"" required data-validation-required-message="Please enter product description.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Product Photos</label>
            <input type="text" class="form-control" name="productPhotos" value="{{product.productPhotos}}"" required data-validation-required-message="Please enter photos.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="form-group col-xs-6 text-right">
              <button type="submit" class="btn btn-default">Edit</button>
          </div>
      </form>
      <form name="delete-post" method="POST" action="/products/{{product.username}}/{{product.slug}}?_method=DELETE">
          <div class="form-group col-xs-6 text-left">
            <button type="submit" class="btn btn-default">Delete</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
